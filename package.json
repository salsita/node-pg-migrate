{
  "name": "node-pg-migrate",
  "version": "9.0.0-alpha.0",
  "description": "PostgreSQL database migration management tool for node.js",
  "scripts": {
    "clean": "git clean -fdx",
    "build": "tsup-node",
    "format": "prettier --cache --write .",
    "lint": "eslint --cache --cache-strategy content .",
    "ts-check": "tsc",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:update-snapshots": "vitest run -u",
    "test:coverage": "vitest --project unit --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "premigrate": "pnpm run build",
    "migrate": "node bin/node-pg-migrate.js",
    "prepublishOnly": "pnpm run clean && pnpm install && pnpm run build",
    "preflight": "pnpm install && run-s format build lint test:update-snapshots ts-check"
  },
  "keywords": [
    "db",
    "database",
    "migrate",
    "migration",
    "migrations",
    "migrator",
    "db-migrate",
    "sql",
    "pg",
    "postgre",
    "postgres",
    "postgresql",
    "cockroach",
    "cockroachdb",
    "extensible",
    "expandable",
    "programatic",
    "programable",
    "api"
  ],
  "homepage": "https://github.com/salsita/node-pg-migrate",
  "bugs": {
    "url": "https://github.com/salsita/node-pg-migrate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salsita/node-pg-migrate.git"
  },
  "license": "MIT",
  "author": "Theo Ephraim",
  "contributors": [
    "Salsita Software <jando@salsitasoft.com>",
    "Christopher Quadflieg <chrissi92@hotmail.de>"
  ],
  "type": "module",
  "exports": {
    "./bin/*": {
      "default": "./bin/*.js"
    },
    ".": {
      "types": "./dist/bundle/index.d.ts",
      "default": "./dist/bundle/index.js"
    },
    "./*": {
      "types": "./dist/legacy/*.d.ts",
      "default": "./dist/legacy/*.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "node-pg-migrate": "bin/node-pg-migrate.js"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "dependencies": {
    "glob": "~11.0.0",
    "jiti": "~2.4.2",
    "yargs": "~18.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.1",
    "@eslint/config-helpers": "0.3.0",
    "@eslint/js": "9.31.0",
    "@stylistic/eslint-plugin": "5.2.1",
    "@testcontainers/postgresql": "11.3.1",
    "@types/config": "3.3.5",
    "@types/node": "20.19.9",
    "@types/pg": "8.15.4",
    "@types/yargs": "17.0.33",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.3.4",
    "@vitest/ui": "3.2.4",
    "config": "4.0.1",
    "cross-env": "7.0.3",
    "dotenv": "17.2.0",
    "dotenv-expand": "12.0.2",
    "esbuild-fix-imports-plugin": "1.0.21",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-gitignore": "0.1.0",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-unicorn": "60.0.0",
    "node-pg-migrate": "file:.",
    "npm-run-all2": "8.0.4",
    "pg": "8.16.3",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-pkg": "0.21.2",
    "testcontainers": "11.3.1",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.37.0",
    "vitepress": "1.6.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@types/pg": ">=6.0.0 <9.0.0",
    "pg": ">=4.3.0 <9.0.0"
  },
  "peerDependenciesMeta": {
    "@types/pg": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.11.0"
  }
}
