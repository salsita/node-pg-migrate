{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "templates", "dist", "migrations"]
}
